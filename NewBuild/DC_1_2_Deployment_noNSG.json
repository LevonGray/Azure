{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "custcode": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourcegroup().location]"
        },
        "subnetName": {
            "type": "string"
        },
        "virtualNetworkId": {
            "type": "string"
        },
        "DC1IPAddress": {
            "type": "string"
        },
        "DC2IPAddress": {
            "type": "string"
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "Premium_LRS"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_b2ms"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "DomainName": {
            "type": "string"
        },
        "NetbiosName": {
            "type": "string"
        },
        "managedID": {
            "type": "string"
        },
        "diagnosticsStorageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS"
        },
        "diagnosticsStorageAccountKind": {
            "type": "string",
            "defaultValue": "Storage"
        }
    },
    "variables": {
        "DC1VMName": "[concat('AZ-',parameters('custcode'),'-DC01')]",
        "DC2VMName": "[concat('AZ-',parameters('custcode'),'-DC02')]",
        "DC1NICName":"[concat(variables('DC1VMName'),substring(uniqueString(resourceGroup().id),0,7))]",
        "DC2NICName":"[concat(variables('DC2VMName'),substring(uniqueString(resourceGroup().id),0,7))]",        
        "vnetId": "[parameters('virtualNetworkId')]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "diagnosticsStorageAccountName": "[toLower(concat(parameters('custcode'),'diag',substring(uniqueString(resourceGroup().id),0,5)))]",
        "diagnosticsStorageAccountId":"[concat('Microsoft.Storage/storageAccounts/',variables('diagnosticsStorageAccountName') )]",
        "managedidentity":"[concat('/subscriptions/',[subscription().subscriptionId],'/resourceGroups/',[resourcegroup().name],'/providers/Microsoft.ManagedIdentity/userAssignedIdentities/',parameters('managedID') )}"
        },
    "resources": [
        {
            "name": "[variables('DC1NICName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-07-01",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('DC1IPAddress')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('DC1VMName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('DC1NICName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('diagnosticsStorageAccountName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter-Core",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('DC1NICName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('DC1VMName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', variables('diagnosticsStorageAccountName'), '.blob.core.windows.net/')]"
                    }
                }
            }
            "resources": [
                {
                    "type": "Microsoft.Resources/deploymentScripts",
                    "apiVersion": "2019-10-01-preview",
                    "name": "runPowerShellInline",
                    "location": "[resourceGroup().location]",
                    "kind": "AzurePowerShell", 
                    "identity": {
                      "type": "userAssigned",
                      "userAssignedIdentities": {
                          "[variables('managedidentity')]":{}
                        }
                        },
                    "properties": {
                      "forceUpdateTag": 1,
                      "azPowerShellVersion": "3.0", 
                      "arguments": "[concat('-DomainName ', parameters('DomainName'),' -NetBios ', parameters('NetbiosName'),' -DAPassword ',parameters('adminPassword'))]",
                      "primaryScriptUri": "https://raw.githubusercontent.com/LevonGray/Azure/master/NewBuild/DCPrimary.ps1",
                      "supportingScriptUris":[],
                      "timeout": "PT30M",
                      "cleanupPreference": "OnSuccess",
                      "retentionInterval": "P1D"
                    }
                }
            ] 
            
        },
        {
            "name": "[variables('DC2NICName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-07-01",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('DC2IPAddress')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('DC2VMName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('DC2NICName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('diagnosticsStorageAccountName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter-Core",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('DC2NICName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('DC2VMName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', variables('diagnosticsStorageAccountName'), '.blob.core.windows.net/')]"
                    }
                }
            }
        },
        {
            "name": "[variables('diagnosticsStorageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "location": "[parameters('location')]",
            "properties": {},
            "kind": "[parameters('diagnosticsStorageAccountKind')]",
            "sku": {
                "name": "[parameters('diagnosticsStorageAccountType')]"
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}